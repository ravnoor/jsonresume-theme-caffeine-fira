{{#if resume.skills.length}}
<div class="skills-container">
  {{#each resume.skills}}
  <section class="container">
    {{#if name}}
      {{> title value=name}}
    {{/if}}
    {{#if proficient}}
      <h4 class="smallcaps bold underline">proficient</h4>
    {{/if}}
    {{#if proficient.length}}
      <ul class="minimal">
        {{#each proficient}}
        <li>
          <h6>{{.}}</h6>
        </li>
        {{/each}}
      </ul>
    {{/if}}

    {{#if intermediate}}
      <h4 class="smallcaps bold underline">intermediate</h4>
    {{/if}}
    {{#if intermediate.length}}
      <ul class="minimal">
        {{#each intermediate}}
        <li>
          <h6>{{.}}</h6>
        </li>
        {{/each}}
      </ul>
    {{/if}}

    {{#if competent}}
      <h4 class="smallcaps bold underline">competent</h4>
    {{/if}}
    {{#if competent.length}}
      <ul class="minimal">
        {{#each competent}}
        <li>
          <h6>{{.}}</h6>
        </li>
        {{/each}}
      </ul>
    {{/if}}
  </section>
  {{/each}}
</div>
{{/if}}
