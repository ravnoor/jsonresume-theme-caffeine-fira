{{#if resume.interests.length}}
<div class="container skills-container">
  {{> title value="Interests"}}

  {{#each resume.interests}}
    <section class="item">
      {{#if name}}
        <h4 class="bold">{{name}}</h4>
      {{/if}}
      {{#if keywords.length}}
        <ul class="minimal wide uppercase">
          {{#each keywords}}
              <li>{{.}}</li>
          {{/each}}
        </ul>
      {{/if}}
    </section>
  {{/each}}
</div>
{{/if}}
