{{#if network}}
  {{#if username}}
    {{#is (lowercase network) "linkedin"}}
      {{> info-tag text=this.username fa-icon="fa-linkedin-square" }}
    {{else}}
      {{#if academicons}}
        {{> info-tag text=this.username ai-icon=(concat "ai-" (lowercase network)) }}
      {{else}}
        {{> info-tag text=this.username fa-icon=(concat "fa-" (lowercase network)) }}
      {{/if}}
    {{/is}}
  {{/if}}
{{/if}}